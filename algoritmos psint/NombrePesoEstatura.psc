Proceso NombrePesoEstatura
	Definir nombre Como Caracter;
	Definir edad, peso Como Real;
	escribir "Por favor ingrese el nombre de la persona ";
	leer nombre;
	escribir "Por favor ingrese la edad de la persona ";
	leer edad;
	escribir "Por favor ingrese el peso de la persona en kg";
	leer peso;
	escribir "El nombre de la persona es ", nombre, ", su edad es ", edad, " años y su peso es ", peso, "kg";
	
FinProceso
